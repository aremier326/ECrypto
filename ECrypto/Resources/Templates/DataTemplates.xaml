<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:ECrypto.ViewModels"
                    xmlns:view="clr-namespace:ECrypto.Views">

    <DataTemplate DataType="{x:Type vm:TopCurrencyVM}">
        <view:TopCurrencyView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:CurrencyDetailsVM}">
        <view:DetailInfo DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:CurrencyInfoVM}">
        <view:CurrencyInfo DataContext="{Binding}"/>
    </DataTemplate>
</ResourceDictionary>