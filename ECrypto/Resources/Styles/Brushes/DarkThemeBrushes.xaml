<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="TopBarBrush" StartPoint="0,1" EndPoint="1,1" >
        <GradientStop Offset="0.0" Color="#1d1e1b"/>
        <GradientStop Offset="1.0" Color="#000100"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="MainBackground" Color="#1e1e1e"/>
    <SolidColorBrush x:Key="AlterBackground" Color="#1a1e1b"/>
    <SolidColorBrush x:Key="MainButtonBackground" Color="#bc82f7"/>
    <SolidColorBrush x:Key="MainButtonBackgroundDisabled" Color="#FF552586"/>
    <SolidColorBrush x:Key="MainButtonForeground" Color="#ffffff"/>
    <SolidColorBrush x:Key="Foreground" Color="#ffffff"/>
    <SolidColorBrush x:Key="DataGridHorisontalLine" Color="#252724"/>
    <SolidColorBrush x:Key="TopBarButtonFill" Color="#ffffff"/>
    <RadialGradientBrush x:Key="BorderBrush" GradientOrigin="0.5,0.5" 
          Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
        <GradientStop Offset="0.0" Color="White"/>
        <GradientStop Offset="1.1" Color="Black"/>
    </RadialGradientBrush>
</ResourceDictionary>