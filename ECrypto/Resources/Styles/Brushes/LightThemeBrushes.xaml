<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="TopBarBrush" StartPoint="0,1" EndPoint="1,1" >
        <GradientStop Offset="0.0" Color="#3f51b5"/>
        <GradientStop Offset="1.0" Color="#64b4f6"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="MainBackground" Color="#ffffff"/>
    <SolidColorBrush x:Key="AlterBackground" Color="#eceff1"/>
    <SolidColorBrush x:Key="MainButtonBackground" Color="#18c683"/>
    <SolidColorBrush x:Key="MainButtonBackgroundDisabled" Color="#77ebbe"/>
    <SolidColorBrush x:Key="MainButtonForeground" Color="#ffffff"/>
    <SolidColorBrush x:Key="DataGridHorisontalLine" Color="#e8e9e9"/>
    <SolidColorBrush x:Key="TopBarButtonFill" Color="#ffffff"/>
    <SolidColorBrush x:Key="Foreground" Color="#000100"/>
    <RadialGradientBrush x:Key="BorderBrush" GradientOrigin="0.5,0.5" 
          Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
        <GradientStop Offset="0.0" Color="Black"/>
        <GradientStop Offset="1.1" Color="White"/>
    </RadialGradientBrush>
</ResourceDictionary>