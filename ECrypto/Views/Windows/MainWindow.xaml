<Window x:Class="ECrypto.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ECrypto.Views.Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        DataContext="{Binding Path=MainWindowVM, Source={StaticResource Locator}}">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Margin="5" Content="   Top 10   " Command="{Binding ShowTopCommand}"/>
            <Button Margin="5" Content=" Details " Command="{Binding ShowDetailCommand}"/>
        </StackPanel>
        <ContentControl Grid.Row="1" Content="{Binding CurrentVm}"/>
    </Grid>
</Window>
